#!/bin/bash

mkdir -p $HOME/.local/share/icons/hicolor/scalable/apps && cp $APPDIR/project-plus-all-stars-dolphin.svg $HOME/.local/share/icons/hicolor/scalable/apps
mkdir -p $HOME/.local/share/project-plus-all-stars-dolphin && cp -R $APPDIR/usr/share/project-plus-all-stars-dolphin $HOME/.local/share/

GITVER=$(wget -qO- https://www.github.com/ilikepizza107/Project-Plus-All-Stars-Dolphin/releases/latest | grep '<p>DOLPHIN' | awk '{print $NF}' | cut -d '<' -f 1)
APPVER=$(cat $APPDIR/version.txt)

if [[ -z "$GITVER" ]]; then
	$APPDIR/AppRun-patched "$@"
elif [ "$GITVER" = "$APPVER" ]; then
	$APPDIR/AppRun-patched "$@"
else
	$APPDIR/update.sh "$@"
fi
